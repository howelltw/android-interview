<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.png.interview.App" />

        <import type="com.png.interview.R" />

        <variable
            name="emptyVisible"
            type="Boolean" />

        <variable
            name="hasError"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:visible="@{emptyVisible || hasError}">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{hasError ? App.getStringText(R.string.error_retrieving_info) : App.getStringText(R.string.please_enter_zip_or_city)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/please_enter_zip_or_city" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>